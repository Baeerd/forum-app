<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.app.role.mapper.UserRoleMapper" >

    <resultMap id="BaseResultMap" type="com.app.role.entity.UserRole" >
        <!-- id -->
        <result column="ID" property="id" jdbcType="VARCHAR" />
        <!-- 人员id -->
        <result column="user_id" property="userId" jdbcType="VARCHAR" />
        <!-- 角色id -->
        <result column="ROLE_ID" property="roleId" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Base_Column_List" >
        ID,
        user_id,
        ROLE_ID
    </sql>

    <select id="find" resultMap="BaseResultMap" parameterType="java.util.Map">
        select
        <include refid="Base_Column_List" />
        from TABLE_USER_ROLE
        <trim prefix="WHERE" prefixOverrides="AND |OR ">
            <if test="id != null" >
                AND ID = #{id,jdbcType=VARCHAR}
            </if>
            <if test="userId != null" >
                AND user_id = #{userId,jdbcType=VARCHAR}
            </if>
            <if test="roleId != null" >
                AND ROLE_ID = #{roleId,jdbcType=VARCHAR}
            </if>
        </trim>
        ORDER BY
        <if test="order != null">
        ${order}
        </if>
        <if test="order == null">
            SID DESC
        </if>
    </select>

    <delete id="delete" parameterType="com.app.role.entity.UserRole" >
        delete from TABLE_USER_ROLE where SID = #{sid,jdbcType=DECIMAL}
    </delete>

    <insert id="insert" parameterType="com.app.role.entity.UserRole" >
        insert into TABLE_USER_ROLE (
           ID,
           user_id,
           ROLE_ID
        )
        values (
            #{id,jdbcType=VARCHAR},
            #{userId,jdbcType=VARCHAR},
            #{roleId,jdbcType=VARCHAR}
        )
    </insert>

    <update id="update" parameterType="com.app.role.entity.UserRole" >
        update TABLE_USER_ROLE set version = version + 1,
        <trim suffixOverrides=",">
            <if test="id != null" >
                ID = #{id,jdbcType=VARCHAR},
            </if>
            <if test="userId != null" >
                user_id = #{userId,jdbcType=VARCHAR},
            </if>
            <if test="roleId != null" >
                ROLE_ID = #{roleId,jdbcType=VARCHAR},
            </if>
        </trim>
        where SID = #{sid,jdbcType=DECIMAL}
    </update>
</mapper>
