<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.app.role.mapper.RoleMapper" >

    <resultMap id="BaseResultMap" type="com.app.role.entity.Role" >
        <!-- id -->
        <result column="ID" property="id" jdbcType="VARCHAR" />
        <!-- 角色id -->
        <result column="ROLE_ID" property="roleId" jdbcType="DECIMAL" />
        <!-- 角色描述 -->
        <result column="ROLE_DESC" property="roleDesc" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Base_Column_List" >
        ID,
        ROLE_ID,
        ROLE_DESC
    </sql>

    <select id="find" resultMap="BaseResultMap" parameterType="java.util.Map">
        select
        <include refid="Base_Column_List" />
        from TABLE_ROLE
        <trim prefix="WHERE" prefixOverrides="AND |OR ">
            <if test="id != null" >
                AND ID = #{id,jdbcType=VARCHAR}
            </if>
            <if test="roleId != null" >
                AND ROLE_ID = #{roleId,jdbcType=DECIMAL}
            </if>
            <if test="roleDesc != null" >
                AND ROLE_DESC = #{roleDesc,jdbcType=VARCHAR}
            </if>
        </trim>
        ORDER BY
        <if test="order != null">
        ${order}
        </if>
        <if test="order == null">
            SID DESC
        </if>
    </select>

    <delete id="delete" parameterType="com.app.role.entity.Role" >
        delete from TABLE_ROLE where SID = #{sid,jdbcType=DECIMAL}
    </delete>

    <insert id="insert" parameterType="com.app.role.entity.Role" >
        insert into TABLE_ROLE (
           ID,
           ROLE_ID,
           ROLE_DESC
        )
        values (
            #{id,jdbcType=VARCHAR},
            #{roleId,jdbcType=DECIMAL},
            #{roleDesc,jdbcType=VARCHAR}
        )
    </insert>

    <update id="update" parameterType="com.app.role.entity.Role" >
        update TABLE_ROLE set version = version + 1,
        <trim suffixOverrides=",">
            <if test="id != null" >
                ID = #{id,jdbcType=VARCHAR},
            </if>
            <if test="roleId != null" >
                ROLE_ID = #{roleId,jdbcType=DECIMAL},
            </if>
            <if test="roleDesc != null" >
                ROLE_DESC = #{roleDesc,jdbcType=VARCHAR},
            </if>
        </trim>
        where SID = #{sid,jdbcType=DECIMAL}
    </update>
</mapper>
